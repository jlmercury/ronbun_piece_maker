<h1>Element of a Piece</h1>
<p>ピースの素となる情報を作りましょう</p>

<%= form_with model: @element, local: true do |f| %>
  <%= render "shared/errors", object: f.object %>

  <%= f.label :title, class: "control-label" %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :citation, class: "control-label" %>
  <%= f.text_area :citation, class: "form-control" %>

  <%= f.label :source, class: "control-label" %>
  <%= f.text_field :source, class: "form-control mb-2" %>

  <%= f.submit "Save / Update", class: "btn btn-primary" %>
<% end %>
