<%= form_with model: @book, local: true do |f| %>
  <%= render "shared/errors", object: f.object %>

  <%= f.label :title, class: "control-label" %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :author, class: "control-label" %>
  <%= f.text_field :author, class: "form-control" %>

  <%= f.label :publisher, class: "control-label" %>
  <%= f.text_field :publisher, class: "form-control" %>

  <%= f.label :publised_year, class: "control-label" %>
  <%= f.number_field :published_year, class: "form-control" %>

  <%= f.label :isbn, class: "control-label" %>
  <%= f.text_field :isbn, class: "form-control" %>

  <%= f.submit "Save / Update", class: "btn btn-primary mt-2" %>
<% end %>
